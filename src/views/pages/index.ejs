<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("../partials/head") %>
    <link rel="stylesheet" href="/styles/base.css" />
  </head>
  <body>
    <div class="container d-flex justify-content-center align-items-center">
      <form class="todo-form" method="post" action="/api/todos">
        <div class="form-group">
          <label for="todoTitle">Title</label>
          <input type="text" class="form-control" id="todoTitle" placeholder="Todo's title..." name="title">
        </div>
        <div class="form-group">
          <label for="todoDescription">Description</label>
          <textarea class="form-control" id="todoDescription" placeholder="Todo's description..." rows="4" name="description"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" onclick="addTodo(event)">Add</button>
      </form>
      </div>
      <%- include ("../partials/scripts") %>
    </div>
  </body>
</html>
